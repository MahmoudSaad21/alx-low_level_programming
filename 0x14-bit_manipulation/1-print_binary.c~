#include "main.h"
/**
*print_binary - prints the binary representation of a number
*@n: unsigned long integer to be printed in binary
*Return: void
*/
void print_binary(unsigned long int n)
{
unsigned long int mask = 1;
int bit = sizeof(unsigned long int) * 8;
while (bit >= 0)
{
if ((n & (mask << bit)) == 0)
_putchar('0');
else
_putchar('1');
bit--;
}
}
